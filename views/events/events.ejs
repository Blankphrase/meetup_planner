<!DOCTYPE html>
<html lang="en">

  <% include ../includes/head %>

  <body ontouchstart>

    <% include ../includes/headerNavigation %>

    <div class="mainContainer">

      <section id="eventsBlock" class="eventList">
        <h1>Event List</h1>
        
        <% events.forEach(function(event) { %>
          <div class="eventGroup">
            <a href="/events/<%= event._id %>"><h3><%= event.name %></h3></a>

            <p class="eventLabel">Type:</p>
            <span class="badge"><%= event.type %></span>

            <p>
              <span class="eventLabel">Start Date/Time:</span><br />
              <%= event.startDate %>
            </p>

            <p>
              <span class="eventLabel">End Date/Time:</span><br />
              <%= event.endDate %>
            </p>

            <p>
              <span class="eventLabel">Location:</span><br />
              <%= event.location %>
            </p>
            <p>
              <span class="eventLabel">Host:</span><br />
              <%= event.host %>
            </p>
            
            <% if (event.message) { %>
            <div class="">
              <p>
                <span class="eventLabel">Messages:</span><br />
                <%= event.message %>
              </p>
            </div>
            <% } %>
          </div>
        <% }); %>

      </section>

      <div class="eventList">
        <button id="loadMoreEvents" class="canSubmit">
          Load More
        </button>
      </div>

    </div>

    <% include ../includes/footer %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="/javascripts/events.js"></script>
  </body>
</html>
