<!DOCTYPE html>
<html lang="en">
  <% include ../includes/head %>
  
  <body ontouchstart>

    <% include ../includes/headerNavigation %>

    <div class="mainContainer">

      <section class="registration">
        <form id="registerForm" class="registrationForm" name="registrationForm" action="/register" method="POST" />
          <h1 class="headerTitle">User Registration</h1>
          <p>* Required</p>

          <label for="registerName">Name* </label><br />
          <span id="errName" class="error"></span>
          <input
            onkeyup="checkName()"
            id="registerName"
            type="text"
            name="registerName"
            placeholder="Your Name"
            autocomplete="name"
            required
            autofocus />

          <label for="registerEmail">Email*</label><br />
          <span id="errEmail" class="error"></span>
          <input
            onkeyup="checkEmail()"
            id="registerEmail"
            type="email"
            name="registerEmail"
            placeholder="Your Email"
            autocomplete="email"
            required />

          <label for="registerAge">Age*</label><br />
          <span id="errAge" class="error"></span>
          <input
            onkeyup="checkAge()"
            id="registerAge"
            type="number"
            name="registerAge"
            placeholder="Your Age"
            min="0"
            max="200"
            required />

          <label for="registerPassword">Password*</label><br />
          <span id="errPass" class="error"></span>
          <p class="tip">
            - Must be 8 - 30 characters, include a symbol (! @ # $ % ^ & *), a number, a lower and uppercase.
          </p>
          <input
            onkeyup="checkPassword()"
            id="registerPassword"
            type="password"
            name="registerPassword"
            placeholder="Your Password"
            required />

          <button id="registerButton" type="submit" class="canSubmit">Register</button>
        </form>
      </section>

    </div>

    <% include ../includes/footer %>

    <script src="/javascripts/helpers.js"></script>
    <script src="/javascripts/registration.js"></script>
  </body>
</html>